extends layout

block content
  h1= title
  p rows: #{query.rows} , columns: #{query.cols}
  - let rows = Number(query.rows)
  - let col = Number(query.cols)
  - if (!Number.isInteger(rows) || !Number.isInteger(col))
    P rows and columns must be of type Integers
  - else if(rows < 1 || rows > 10)
    p rows value must be of range of 1 to 10
  - else if(col < 1 || col > 10)
    p cols value must be of range of 1 to 10
  - else
    table#outer
      - for(let i = 0; i < rows; i++)
        tr#middle
          - for(let j = 0; j < col; j++)
            - let cell = 0;
              - if (i === j)
                - cell = 1;
              - else if (i === j + 1)
                - cell = 2;
              - else if (i === j - 1)
                - cell = i;
              td= cell